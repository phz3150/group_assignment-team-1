import numpy as np
from math import sqrt
import math


def coordinates(x,R):
    """Function that calculates all y coordinates of a circle
    Input: array x & radius R
    Output: all y coordinates of a circle """
    
    
    
    for i in x:
        y = sqrt( (R**2) - (i**2) )
        print(y)



